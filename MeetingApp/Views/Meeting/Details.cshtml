@model UserInfo
@{
    ViewBag.Title = "Registration Status";
}

@{
    var className = Model.WillAttend ? "primary" : "danger";
}

<main class="text-center">
    <h4>Registration Status</h4>
    <p>
        <span class="badge text-bg-@className">
            @if (Model.WillAttend)
            {
                <text>Will Attend</text>
            }
            else
            {
                <text>Will Not Attend</text>
            }
        </span>
    </p>
    <p>Name: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@className">View All Attendees</a>

</main>