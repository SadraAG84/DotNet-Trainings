@model IEnumerable<CourseEnrollment>

<h2>Student List</h2>
<table class="table teable-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">
                @Html.DisplayNameFor(m => m.EnrollmentId)
            </th>
            <th style="width: 150px;">
                @Html.DisplayNameFor(m => m.Student.StudentFirstName)
            </th>
            <th style="width: 150px;">
                @Html.DisplayNameFor(m => m.Course.CourseName)
            </th>
            <th style="width: 150px;""></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.EnrollmentId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Student.StudentFirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                    <td>
                        <a asp-controller=" Student" asp-action="Edit" asp-route-id="@item.StudentId"
                    class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentId"
                        class="btn btn-sm btn-danger">Delete</a>
                    </td>
                    


            </tr>
        }
        </tbody>
</table>