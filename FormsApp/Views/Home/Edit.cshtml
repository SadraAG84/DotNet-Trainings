@* Models/Product.cs *@
@model Product
@{
    ViewData["Title"] = "Create";
}

<form asp-controller="Home" asp-action="Edit" method="post", enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-labl"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-labl"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="input-group mb-3">
        <input type="file" name="ImageFile" id="ImageFile" class="form-control" />
    </div>
    <div>
        <img src="~/img/@Model.Image" alt="" style="width: 100px;">
        <input type="hidden" asp-for="@Model.Image" />
    </div>


    <div class="mb-3">
        <label asp-for="CategoryId" class="form-labl"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
            <option value="0">All</option>
            @* @foreach (var item in ViewBag.Categories)
            {
                <option value="@item.CategoryId">@item.Name</option>
            } *@

        </select>
    </div>
    <div class="mb-3">
        <input asp-for="IsActive" class="form-check-input">
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>