@model List<Course>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.main.css">
    <title>Document</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="#">
                    CourseApp
                </a>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Courses</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        <main>
            <h1> Course List</h1>
            @foreach (var course in Model)
            {

                <div class="card mb-3" id="course_@course.ID">
                    <div class="row">
                        <div class="col md-4">
                            <img src="~/img/@course.Image" alt="" width="350">
                        </div>
                        <div class="col md-8">
                            <div class="card-body">
                                <h5 class="card-title">@course.Title</h5>
                                <p class="card-text">@course.Desciption</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </main>
    </div>


</body>

</html>